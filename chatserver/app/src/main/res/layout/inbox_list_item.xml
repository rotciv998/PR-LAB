<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        android:layout_marginBottom="@dimen/mtrl_card_spacing"
        app:cardElevation="@dimen/_4sdp"
        android:translationZ="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_6sdp"
        app:strokeWidth="@dimen/_5sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="PrivateResource">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="@dimen/_5sdp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject:"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/subject_value"
               android:layout_width="@dimen/_220sdp"
               android:layout_height="wrap_content"
               android:text="Subject"
               android:textSize="@dimen/_14sdp"
               android:layout_marginStart="@dimen/_15sdp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toEndOf="@id/subject"/>


           <com.google.android.material.textview.MaterialTextView
               android:id="@id/from"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="From:"
               android:textSize="@dimen/_14sdp"
               android:textStyle="bold"
               app:layout_constraintTop_toBottomOf="@id/subject_value"
               app:layout_constraintStart_toStartOf="parent"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/from_value"
               android:layout_width="@dimen/_220sdp"
               android:layout_height="wrap_content"
               android:text="From"
               android:textSize="@dimen/_14sdp"
               android:layout_marginStart="@dimen/_15sdp"
               app:layout_constraintTop_toBottomOf="@id/subject_value"
               app:layout_constraintStart_toEndOf="@id/subject"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/content"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Message:"
               android:textSize="@dimen/_14sdp"
               android:textStyle="bold"
               app:layout_constraintTop_toBottomOf="@id/from_value"
               app:layout_constraintStart_toStartOf="parent"/>

           <com.google.android.material.textview.MaterialTextView
               android:id="@+id/content_value"
               android:layout_width="@dimen/_220sdp"
               android:layout_height="wrap_content"
               android:text="Message"
               android:textSize="@dimen/_14sdp"
               android:layout_marginStart="@dimen/_15sdp"
               app:layout_constraintTop_toBottomOf="@id/from_value"
               app:layout_constraintStart_toEndOf="@id/subject"
               app:layout_constraintBottom_toBottomOf="parent"/>

       </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>